<h2><%= board.escape("name") %></h2>

<div class="lists" data-board-id="<%= board.id %>">
  <% lists.each(function (list) { %>
    <div class="list" id="list_<%= list.id %>" data-id="<%= list.id %>">
      <header class="title">
        <%= list.escape("title") %>
      </header>

      <div class="cards" id="cards_list_<%= list.id %>" data-list-id="<%= list.id %>">
        <% list.cards().each(function (card) { %>
          <div class="card" id="card_<%= card.id %>">
            <%= card.escape("title") %>
          </div>
        <% }); %>
      </div>

    </div>
  <% }); %>
</div>
