<h2><%= board.escape("name") %></h2>

<div class="lists">
  <% lists.each(function (list) { %>  	
    <div class="list" id="list_<%= list.id %>">
      <header class="title">
        <%= list.escape("title") %>
        <button class="archive_list"
        				data-list-id="<%= list.id %>">X</button>
      </header>

      <div class="cards" 
      		 id="cards_list_<%= list.id %>" 
      		 data-list-id="<%= list.id %>">
        <% list.cards().each(function (card) { %>
          <div class="card" 
          		 id="card_<%= card.id %>" 
          		 data-card-id="<%= card.id %>">
            <%= card.escape("title") %>
            <button class="archive_card"
										data-card-id="<%= card.id %>">X</button>
          </div>
        <% }); %>
      </div>

      <div class="add_card">
				<form class="add_card" data-list-id="<%= list.id %>">
		  		<input type="text" name="card[title]" placeholder="Add a card ..." />
					<input type="submit" value="Add Card" />
				</form>
			</div>

    </div>
  <% }); %>

	<div class="add_list">
		<form class="add_list">
  		<input type="text" name="list[title]" placeholder="Add a list ..." />
			<input type="submit" value="Add List" />
		</form>
	</div>
</div>

<section class="card_detail"></section>
